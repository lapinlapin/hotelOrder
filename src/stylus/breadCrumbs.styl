.breadCrumbs
  	width 70%
  	height 37px
  	position relative

  	margin 30px auto 0

.breadCrubms__item
  	display inline-block
  	box-sizing border-box

  	padding 0 12px
  	margin-right 3px

  	height 37px

  	border-top-left-radius 8px
  	border-top-right-radius 8px

  	border-right 1px solid #ccc

  	text-align center

  	line-height 37px

  	color #EAF0F5

  	background-image url('../img/tab-bg.png')
  	background-repeat repeat-x

.breadCrubms__item:hover
  	background-color  #EBEBEB
  	cursor pointer

.contentTabs
  	width 75%
  	margin 0 auto

  	border-radius 15px

  	border 1px solid #28A4F4

.breadCrumbs__buttons
  	float right
  	margin-top 55px
  	margin-right  10px

.breadCrumbs__button
  	display inline-block
  	height 34px
  	line-height 34px
  	margin-left 12px
  	background-image url('../img/tab-bg.png')
  	background-repeat repeat-x
  	padding 0 16px
  	color #F5F5F4
  	border-radius 8px
  	cursor pointer

.breadCrumbs__button:hover
  	color #fff

.breadCrumbs__button:active
  	line-height 32px

.breadCrumbs__button_big
  	margin-top 20px
  	height 70px
  	line-height 70px
  	padding 0 40px
  	background-image none
  	background-color #5DA6D4

.breadCrumbs__button_big:hover
  	color #fff

.breadCrumbs__button_big:active
  	line-height 67px


.breadCrumbs__tooltip
  	width 170px
  	height 85px
  	position absolute
  	top 110px
  	right 7px
  	border-radius 15px
  	background-color #EEE
  	padding 15px
  	box-sizing border-box

.breadCrumbs__tooltip-title
  	color #717171

.breadCrumbs__tooltip-sum
  	color #000
  	font-size 26px
  	margin-top 5px
  	margin-right 8px
  	display inline-block
