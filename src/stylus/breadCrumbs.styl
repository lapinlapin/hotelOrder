.breadCrumbs
  	width 70%
  	height 37px

  	margin 30px auto 0

.breadCrubms__item
  	display inline-block
  	box-sizing border-box

  	padding 0 12px
  	margin-right 3px

  	height 37px

  	border-top-left-radius 8px
  	border-top-right-radius 8px

  	border-right 1px solid #ccc

  	text-align center

  	line-height 37px

  	color #EAF0F5

  	background-image url('../img/tab-bg.png')
  	background-repeat repeat-x

.breadCrubms__item:hover
  	background-color  #EBEBEB
  	cursor pointer

.contentTabs
  	width 75%
  	margin 0 auto

  	border-radius 15px

  	border 1px solid #28A4F4

.breadCrumbs__buttons
  	float right
  	margin-top 55px
  	margin-right  10px

.breadCrumbs__buttons a
  	display inline-block
  	height 34px
  	line-height 34px
  	margin-left 12px
  	background-image url('../img/tab-bg.png')
  	background-repeat repeat-x
  	padding 0 16px
  	color #F5F5F4
  	border-radius 8px
  	cursor pointer

.breadCrumbs__buttons a:hover
  	color #fff

.breadCrumbs__buttons a:active
  	line-height 32px

